#include <stdio.h>
#include <stdint.h>
#include "libTLC5947.h"

void return_array(const uint16_t *arrayIn, uint8_t *arrayOut, uint16_t size) {
  int i;
  for (i = 0; i < size; i++) {
    arrayOut[i] = (uint8_t)(arrayIn[i] << 4);
  }
}

int main(void) {
  uint8_t var1;
  var1 = 0xFF;
  uint8_t *p1;
  p1 = &var1;

  printf("p1 = %p,*p1 = 0x%X, &var1 = %p, var1 = 0x%X\n", p1, *p1, &var1, var1);

  uint8_t  var2[10];
  int i;
  int n = sizeof(var2)/sizeof(var2[0]);
  for (i = 0; i < n; i++) {
    var2[i] = (uint8_t)i;
  }
  uint8_t *p2;
  p2 = &var2[0];

  printf("p2 = %p,*p2 = 0x%X, *(p2+1) = 0x%X, &var2 = %p, var2[0] = 0x%X, var2[1] = 0x%X\n", p2, *p2, *(p2+1), &var2, var2[0], var2[1]);

  int size = 3;
  uint16_t dataIn[size];
  uint8_t dataOut[size];
  for (i = 0; i < size; i++) {
    dataIn[i] = i | 0xFF00;
  }

  return_array(dataIn, dataOut, size);
  for (i = 0; i < size; i++) {
    printf("%X, ", dataIn[i]);
  }
  for (i = 0; i < size; i++) {
    printf("%X, ", dataOut[i]);
  }
  printf("\n");

  uint16_t dataIn[24] = {0x0000, 0x0001, 0x0002, 0x0003,
			 0x0004, 0x0005, 0x0006, 0x0007,
			 0x0008, 0x0009, 0x000A, 0x000B,
			 0x000C, 0x000D, 0x000E, 0x000F,
			 0x0010, 0x0012, 0x0013, 0x0014,
			 0x0015, 0x0016, 0x0017, 0x0018};
  uint8_t dataOut[36];
  Nbit_array_to_8bit_array(dataIn, 24, 12, dataOut, 36);
  int i;
  for (i = 0; i < 36; i++) {
    printf("%X, ", dataOut[i]);
  }
  printf("\n");

  return 0;
}
