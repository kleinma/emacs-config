theta1d = linspace(0,360,1001);
theta1 = theta1d*pi/180;

omega1 = 1;
r1 = 1;
r2 = [1.1 1.2 1.5 2 3 4];

omega2 = NaN(length(r2),length(theta1));
vb = NaN(length(r2),length(theta1));

for i = 1:length(r2)
    omega2(i,:) = (r1*omega1*cos(theta1))./(r2(i)*cos(asin((r1/r2(i))*sin(theta1))));
    vb(i,:) = -r1*omega1*sin(theta1)+r2(i)+omega2(i,:).*sin(asin((r1/r2(i))*sin(theta1)));
end

figure(1)
plot(theta1d,omega2)
xlim([min(theta1d) max(theta1d)])
ylabel('\omega_2 (rad/sec)')
xlabel('\theta_1 (degrees)')

figure(2)
plot(theta1d,vb)
xlim([min(theta1d) max(theta1d)])
ylabel('v_b (units/sec)')
xlabel('\theta_1 (degrees)')